@model List<Enfant>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/a0d4060a52.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="~/css/favoris.css">

    <title>Favoris</title>
</head>
<body>
    <div id="contenueHéro" class="container-fluid">
        <p id="titreHéro" style="font-weight: bold; margin-bottom: 42px;"><a style="color: rgb(1, 180, 255)">F</a>AVORITES</p>
        <p id="infos-titres">Your <a style="color: rgb(1, 180, 255)">favorites</a></p>
    </div>

    <hr class="solid" style="margin: 0px">

    <div class="container-fluid background">
        <div style="color:white; font-weight:bold; text-align:center; font-size:48px">You have <a style="color: rgb(1,180,255)">@(Model.Count) favorite(s)</a></div>

        @foreach (var item in Model)
        {
            <div class="row fond justify-content-center align-items-center section">
                <div class="col-4">
                    
                    <p class="titreEquipe">@(item.Nom)</p>
                    <p class="infos">Game : <a style="color: rgb(1,180,255)">@(item.Parent.Nom)</a></p>
                    <p class="infos">Region : <a style="color: rgb(1,180,255)">@(item.Region)</a></p>
                    <p class="lien" style="margin-top: 30px">VIEW TEAM<a><i class="fas fa-trash-alt fa-sm icon" style="color: #ffffff; margin-left: 20px;"></i></a></p>
                   
                </div>
                <div class="col-4">
                    <img src="/images/@(item.ImgFile)" class="imageFavoris">
                </div> 
            </div> 
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    @section NomPage {
        FAVORITES
    }
</body>
</html>
