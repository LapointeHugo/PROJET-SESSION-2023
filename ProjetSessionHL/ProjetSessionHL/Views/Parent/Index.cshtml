@model IEnumerable<ProjetSessionHL.Models.Parent>

@{
    ViewData["Title"] = "Index";
}
<body style="padding-top: 80px; padding-bottom:80px; color: white">
    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImgFile)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImgFileEquipe)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Courses)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Lessons)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Coaches)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImgFile)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImgFileEquipe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Courses)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lessons)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Coaches)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</body>
@section NomPage {
        GAMES
}
