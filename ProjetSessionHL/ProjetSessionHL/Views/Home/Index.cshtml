@model List<Parent>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styleAcceuil.css">

    <script src="https://kit.fontawesome.com/963347b1c3.js" crossorigin="anonymous"></script>
    <title>Acceuil</title>
</head>
<body>
    <main>
        <div id="contenueHéro" class="container-fluid">
            <p id="titreHéro" style="font-weight: bold; margin-bottom: 42px;"><a style="color: rgb(1, 180, 255)">E</a>LITE<a style="color: rgb(1, 180, 255)">P</a>LAY</p>
            <a href="/Enfant/Recherche"><button id="boutonHéro" style="font-weight: 600; margin: 0px;">SEARCH</button></a>
        </div>

        <hr class="solid" style="margin: 0px">

        <div id="background" class="container-fluid">
            <div id="contenuelisteParent" class="container">
                @foreach (var item in Model)
                {
                    <div class="row">
                        <div class="col-xl-3 col-lg-12 col-md-12 col-sm-12 col-xs-12 justify-content-center" style="height: 279px; padding-left: 0px; padding-right: 0px;">
                            <img class="imageJeux" src="/images/@(item.ImgFile)" style="height: 100%">
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 col-xl-9" style="padding: 0px;">
                            <div class="row" style="height: 80%">
                                <div id="infosJeux" class="col-xl-7">
                                    <div class="row titre-jeux" style="height: 20%">
                                        <p><a style="color: rgb(1, 180, 255)">@(item.Nom)</a></p>
                                    </div>
                                    <div class="row description">
                                        <p style="font-style:italic; color: rgb(255, 255, 255, 0.5); margin-top: 10px;">
                                            @(item.Description)
                                        </p>
                                    </div>
                                    <div class="row">
                                        <p style="font-weight: 600; text-align: center; font-size: 20px;">@(item.Courses) courses - @(item.Lessons) lessons</p>
                                    </div>
                                    <div class="row">
                                        <p style="font-weight: 600; text-align: center; font-size: 20px;"><i class="fa-solid fa-circle fa-2xs" style="color: #ff0000;"></i>&nbsp; @(item.Coaches) Pros Coaching Now</p>
                                    </div>
                                    <div class="row justify-content-center">
                                        <button id="boutonSession" style="margin: 0;"><a style="color: rgb(1, 180, 255)">BOOK</a> A SESSION</button>
                                    </div>
                                </div>
                                <div id="sectionPro" class="col-xl-5 col-lg-12 col-md-12 col-sm-12 col-xs-12" style="height: 100%; padding: 0px; text-align: center;">
                                    <img id="imagePro" class="mb-3" src="/images/@(item.ImgFileEquipe)">
                                    <p><button id="boutonPro" style="margin: 0;">VIEW <a style="color: rgb(1, 180, 255)">PRO</a> TEAMS</button></p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr class="solid container" style="margin-top: 80px; margin-bottom: 80px;">
                }
            </div>
        </div> 
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    @section NomPage {
        HOME
    }
</body>
</html>
