@model PageModaleViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modale</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/modale.css">

    <script src="https://kit.fontawesome.com/963347b1c3.js" crossorigin="anonymous"></script>
    <script src="http://code.jquery.com/jquery-latest.min.js"></script>
</head>

<body style="background-color: black;">
    <div id="contenant" class="d-flex flex-column">
        <div>
            <p style=" margin-bottom: 40px; color: white; font-size: 48px; font-weight: bold; text-align: center;">OUR <a style="color: #01B4FF;">TEAMS</a></p>
        </div>
        <div style="height: auto; width: 100%; background-color: rgb(20 , 20, 23); border: 2px solid white; border-radius: 20px;" class="d-flex">
            <div class="col-3 d-flex flex-column align-items-center" style="padding-right: 20px; text-align: center; height: 100%; border-right: 2px solid white; padding-left: 20px; padding-top: 20px; padding-bottom: 20px;">
                <form asp-controller="Enfant" asp-action="ModaleFiltre" method="get">
                    <p style="font-size: 40px; font-weight: bold; color: #01B4FF; height: 10%;">FILTER</p>
                    <div style="margin-bottom: 30px; margin-top: 30px; height: 15%">
                        <label for="teamName" class="titrefiltre">NAME</label><br>
                        <input type="text" id="teamName" name="Nom" class="details" value="@Model.Criteres.Nom" style="color: white; border: 2px  solid #01B4FF; border-radius: 20px; background-color: rgb(20 , 20, 23); padding-left: 7px; padding-right: 7px; padding-top: 2px; padding-bottom: 2px;">
                    </div>
                    <div style="margin-bottom: 30px; height: 15%">
                        <p style="margin-bottom: 0px; margin-bottom: 10px;" class="titrefiltre">YEAR OF CREATION</p>
                        <select name="Creation" style="border: 2px  solid #01B4FF; border-radius: 20px; background-color: rgb(20 , 20, 23); color: white; width: 58%; padding-left: 7px; padding-right: 7px; padding-top: 2px; padding-bottom: 2px;">
                            @foreach (var creation in Model.Criteres.AnneeCreation)
                            {
                                <option selected="@(Model.Criteres.Creation.ToString() == creation ? "selected" : "") " value="@creation">@creation</option>
                            }
                        </select>
                    </div>
                    <div style="margin-bottom: 30px; height: 15%">
                        <p style="margin-bottom: 10px;" class="titrefiltre">REGION</p>
                        <select name="Region" style="border: 2px  solid #01B4FF; border-radius: 20px; background-color: rgb(20 , 20, 23); color: white;padding-left: 7px; padding-right: 7px; padding-top: 2px; padding-bottom: 2px;">
                            @foreach (var region in Model.Criteres.ChoixRegion)
                            {
                                <option selected="@(Model.Criteres.Region == region ? "selected" : "") " value="@region">@region</option>
                            }
                        </select>
                    </div>
                    <div style=" margin-bottom: 0px;">
                        <div style="margin-bottom: 10px; height: 15%;">
                            @if (@Model.Criteres.EstJeuxValorant)
                            {
                                <label for="jeux" class="titrefiltre">VALORANT</label>
                                <input type="checkbox" id="jeux" name="EstJeuxValorant" id="box" value="true" checked>
                            }
                            else
                            {
                                <label for="jeux" class="titrefiltre">VALORANT</label>
                                <input type="checkbox" id="jeux" name="EstJeuxValorant" id="box" value="true">
                            }
                        </div>
                        <div style="margin-bottom: 10px; height: 15%">
                            @if (@Model.Criteres.EstJeuxLeagueofLegends)
                            {
                                <label for="jeux" class="titrefiltre">LEAGUE OF LEGENDS</label>
                                <input type="checkbox" id="jeux" name="EstJeuxLeagueofLegends" id="box" value="true" checked>
                            }
                            else
                            {
                                <label for="jeux" class="titrefiltre">LEAGUE OF LEGENDS</label>
                                <input type="checkbox" id="jeux" name="EstJeuxLeagueofLegends" id="box" value="true">
                            }
                        </div>
                        <div style="height: 15%">
                            @if (@Model.Criteres.EstJeuxCsgo)
                            {
                                <label for="jeux" class="titrefiltre">CSGO</label>
                                <input type="checkbox" id="jeux" name="EstJeuxCsgo" id="box" value="true" checked>
                            }
                            else
                            {
                                <label for="jeux" class="titrefiltre">CSGO</label>
                                <input type="checkbox" id="jeux" name="EstJeuxCsgo" id="box" value="true">
                            }
                        </div>
                    </div>
                    <button type="submit" class="titrefiltre" style="margin-top: 30px ;padding-left: 10px; padding-right: 10px; padding-top: 5px; padding-bottom: 5px; background-color: #01B4FF; border-radius: 20px">SEARCH</button>
                </form>
            </div>
            <div class="col-9 d-flex flex-column justify-content-around" style="padding-left: 20px; padding-right: 20px; padding-top: 40px; padding-bottom: 40px;">
                <div class="d-flex" style="height: 100%; overflow-x: scroll">
                    <partial name="_ResultPartialModale" />
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    @section NomPage {
        MODALE
    }
</body>
</html>