@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/recherche.css">

    <title>Recherche</title>
</head>
<body>
    <div id="contenueHéro" class="container-fluid">
        <p id="titreHéro" style="font-weight: bold; margin-bottom: 42px;"><a style="color: rgb(1, 180, 255)">S</a>EARCH</p>
        <p id="infos-titres">Find <a style="color: rgb(1, 180, 255)"> your favorite team!</a></p>
    </div>
    <hr class="solid" style="margin: 0px">
    <div class="background container-fluid">
        <div id="soustitreRecherche" class="row" style="text-align: center">
            <p>SEARCH <a style="color: rgb(1,180,255)">FORM</a></p>
        </div>
        <div id="formRecherche">
            <div id="selectionJeux" class="" style="text-align: center">
                <p class="jeux">Valorant</p>
                <p class="jeux">League of Legends</p>
                <p class="jeux">Counter-Strike: GO</p>
            </div>
            <div class="">
                <hr class="solid">
            </div>
            <div class="row justify-content-around" style="margin-top: 30px; padding: 0px;">
                <div class="col-xl-4 col-lg-7 col-md-7 col-sm-7 col-xs-7 equipe">
                    <label for="teamName" class="nomChamp">Team Name :</label><br>
                    <input type="text" id="teamName" name="teamName" class="details" placeholder="Fnatic">
                </div>
                <div class="col-xl-4 col-lg-7 col-md-7 col-sm-7 col-xs-7 ">
                    <p class="nomChamp" style="margin-bottom: 0px">Creation :</p>
                    <select class="details">
                        <option>All</option>
                        <option>2023</option>
                        <option>2022</option>
                        <option>2021</option>
                        <option>2020</option>
                    </select>
                </div>
            </div>
            <div class="row justify-content-around" style="margin-top: 30px; padding: 0px;">
                <div class="col-xl-4 col-lg-7 col-md-7 col-sm-7 col-xs-7  d-flex align-items-center site">
                    <label for="website" class="nomChamp">Has Website &nbsp;&nbsp;&nbsp;</label>
                    <input type="checkbox" id="website" name="website" id="box" style="margin-left: 50px">
                </div>
                <div class="col-xl-4 col-lg-7 col-md-7 col-sm-7 col-xs-7 ">
                    <p class="nomChamp" style="margin-bottom: 0px">Region :</p>
                    <select class="details">
                        <option>All</option>
                        <option>North America</option>
                        <option>Europe</option>
                        <option>Korea</option>
                        <option>China</option>
                    </select>
                </div>
            </div>
            <div class="row justify-content-center" style="margin-top: 50px; padding: 0px; text-align: center; margin-bottom: 40px; padding-bottom: 30px;">
                <div class="row justify-content-center">
                    <button type="button" class="btnReset col-xl-2 col-lg-12 col-md-12 col-sm-12 col-xs-12">RESET</button>
                    <button type="button" class="btnSearch col-xl-2 col-lg-12 col-md-12 col-sm-12 col-xs-12">SEARCH</button>
                </div>
            </div>
        </div>
    </div>

    <hr class="solid" style="margin-top: 0px">

    <div id="imageFondResult">
        <p id="sousTitreResultat">LIST OF <a style="color: rgb(1,180,255)">RESULTS</a><br>(<a style="color: rgb(1,180,255)">12</a> results)</p>
        <div id="listeResultat" class="container">
            <div class="row" style="height: auto">
                <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-6 result">
                    <img src="/images/LogoFnatic.png" class="imageLogo">
                    <p class="titreEquipe">FNATIC</p>
                </div>
                <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-6 result">
                    <img src="/images/LogoC9.png" class="imageLogo">
                    <p class="titreEquipe">CLOUD 9</p>
                </div>
                <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-6 result">
                    <img src="/images/LogoTL.png" class="imageLogo">
                    <p class="titreEquipe">TEAM LIQUID</p>
                </div>
                <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-6 result">
                    <img src="/images/LogoFPX.png" class="imageLogo">
                    <p class="titreEquipe">FUNPLUS PHOENIX</p>
                </div>
            </div>
            <div class="row" style="height: auto">
                <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-6 result">
                    <img src="/images/LogoG2.png" class="imageLogo">
                    <p class="titreEquipe">G2 ESPORTS</p>
                </div>
                <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-6 result">
                    <img src="/images/LogoFlyQuest.png" class="imageLogo">
                    <p class="titreEquipe">FLYQUEST</p>
                </div>
                <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-6 result">
                    <img src="/images/LogoT1.png" class="imageLogo">
                    <p class="titreEquipe">T1</p>
                </div>
                <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-6 result">
                    <img src="/images/LogoTSM.png" class="imageLogo">
                    <p class="titreEquipe">TEAM SOLO MID</p>
                </div>
            </div>
            <div class="row" style="height: auto">
                <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-6 result">
                    <img src="/images/LogoG2.png" class="imageLogo">
                    <p class="titreEquipe">G2 ESPORTS</p>
                </div>
                <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-6 result">
                    <img src="/images/LogoFlyQuest.png" class="imageLogo">
                    <p class="titreEquipe">FLYQUEST</p>
                </div>
                <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-6 result">
                    <img src="/images/LogoT1.png" class="imageLogo">
                    <p class="titreEquipe">T1</p>
                </div>
                <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-6 result">
                    <img src="/images/LogoTSM.png" class="imageLogo">
                    <p class="titreEquipe">TEAM SOLO MID</p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>
